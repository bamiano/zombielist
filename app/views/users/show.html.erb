<%= render partial: "header" %>
<!-- link to internal style sheet -->
<!-- <link rel="stylesheet" href="stylesheets/scaffold.css.scss"> -->
<link href='https://api.tiles.mapbox.com/mapbox.js/v2.1.4/mapbox.css' rel='stylesheet' />
<link rel="stylesheet" type="text/css" href="aplications.css">

<div class="container" style="height: 900px">
	<div class="row">
		<h1> Enter your zipcode for important locations during the zombie apocalypse</h1>

	</div>
	<div class="row" style="height:480px; margin-top:20px">

		<div class="col-md-12" style="height:800px" >

			<nav id='filters' class='filter-ui' style="color:black"></nav>
			<div id='map' style="width:100%; height:100%"></div>
		</div>
	</div>
</div>

<br>
<br>
<div class="container">
	<h2>Disaster Preparedness Items</h2>
	<div class="row">
		<% @items.each do |item| %>
		<div class="col-md-4">
			<div class="thumbnail">
				<h5 style="text-align: center; font-size:30px"><%= item.item %></h5>
				<p class="pull-right"><strong>Price:</strong> $<%= item.price %> </p>
				<img class="smallpic" src="<%= item.image %>" width="200" height="200">
				<div class="caption">
					<p><strong>Description:</strong></p>
					<ul>
						<% item.description.split(".").each do |el|%>
						<li><%= el%></li>
						<%end%>
						</ul>
				</div>
			</div>
			<div class="adderbtn">
				<a class="btn" href="<%= item.url%>" target="_blank">Buy Now</a>
				<%= link_to 'Favorite', favorite_path(item), class:"btn" %>
			</div>
		</div>
		<% end %>
	</div>
</div>








